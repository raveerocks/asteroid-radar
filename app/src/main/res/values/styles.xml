<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_item_field_small">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="style_item_field_large">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_item_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>
</resources>